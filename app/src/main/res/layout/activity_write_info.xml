<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WriteInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="강아지 정보를 적어주세요"
                    android:layout_marginTop="20dp"
                    android:textSize="30sp"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="정확히 작성할 수록 결과도 정확해집니다."
                    android:textSize="15sp"
                    android:fontFamily="@font/nanum_square_round_regular"
                    android:gravity="center"
                    />


                <ImageView
                    android:id="@+id/profileImg"
                    android:layout_width="370dp"
                    android:layout_height="245dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/colorLight"
                    android:backgroundTint="@color/colorBackground"
                    app:srcCompat="@mipmap/dog" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_rounded_image"
                        android:tint="#fff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="이름"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/dog_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:background="@null"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:hint="Name"
                        android:inputType="text"
                        android:nextFocusDown="@id/dog_age"
                        android:paddingHorizontal="20dp"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="25sp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_rounded_image"
                            android:tint="#fff"
                            android:layout_margin="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="나이"
                            android:textSize="16sp"
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/nanum_square_round_regular"
                            />
                        <EditText
                            android:id="@+id/dog_age"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginEnd="40dp"
                            android:paddingHorizontal="20dp"
                            android:background="@null"
                            android:inputType="number"
                            android:nextFocusRight="@id/dog_weight"
                            android:imeOptions="actionNext"
                            android:textSize="25sp"
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/nanum_square_round_regular"
                            android:gravity="end|center_vertical" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="25dp"
                            android:text="세"
                            android:textSize="16sp"
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/nanum_square_round_regular"
                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_rounded_image"
                            android:tint="#fff"
                            android:layout_margin="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="체중"
                            android:textSize="16sp"
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/nanum_square_round_regular"
                            />
                        <EditText
                            android:id="@+id/dog_weight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginEnd="40dp"
                            android:paddingHorizontal="20dp"
                            android:background="@null"
                            android:inputType="number"
                            android:textSize="25sp"
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/nanum_square_round_regular"
                            android:gravity="end|center_vertical"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="15dp"
                            android:text="kg"
                            android:textSize="16sp"
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/nanum_square_round_regular"
                            />
                    </FrameLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_rounded_image"
                        android:tint="#fff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="크기"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/dog_size"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center"
                        >

                        <RadioButton
                            android:id="@+id/size_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="소형견"
                            android:fontFamily="@font/nanum_square_round_regular"
                            />

                        <RadioButton
                            android:id="@+id/size_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="중형견"
                            android:fontFamily="@font/nanum_square_round_regular"/>

                        <RadioButton
                            android:id="@+id/size_big"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="대형견"
                            android:fontFamily="@font/nanum_square_round_regular"/>

                    </RadioGroup>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_rounded_image"
                        android:tint="#fff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="털 특성"
                        android:textColor="@color/colorText"
                        android:textSize="16sp"
                        />

                    <RadioGroup
                        android:id="@+id/dog_fur"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center"
                        >

                        <RadioButton
                            android:id="@+id/fur_single_coat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="단일모"
                            android:fontFamily="@font/nanum_square_round_regular"
                            />

                        <RadioButton
                            android:id="@+id/fur_double_coat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="이중모"
                            android:fontFamily="@font/nanum_square_round_regular"
                            />

                    </RadioGroup>
                </FrameLayout>


            </LinearLayout>
            <FrameLayout
                android:id="@+id/result_btn"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="30dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/btn_insert"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_top_rounded_image" />

<!--                <ImageButton-->
<!--                    android:layout_gravity="left"-->
<!--                    android:layout_marginLeft="30dp"-->
<!--                    android:layout_marginTop="20dp"-->
<!--                    android:id="@+id/btn_insert"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:maxHeight="80dp"-->
<!--                    android:maxWidth="80dp"-->
<!--                    android:adjustViewBounds="true"-->
<!--                    android:scaleType="fitCenter"-->
<!--                    android:src="@drawable/ic_plus"-->
<!--                    android:background="@android:color/transparent"-->
<!--                    />-->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:text="분석하기"
                    android:textColor="@color/colorText"
                    android:textSize="25sp" />

            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>